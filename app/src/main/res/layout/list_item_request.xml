<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2024-11-30"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Reason -->
        <TextView
            android:id="@+id/reasonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason: Need to attend personal event"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@color/Orange"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Optional: Leave and Return Dates -->
        <TextView
            android:id="@+id/leaveTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Date: 22-12-2024"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/returnTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Date: 29-12-2024"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
